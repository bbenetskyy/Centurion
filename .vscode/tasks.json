{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build host",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/AutoUpdateHost"
            }
        },
        {
            "label": "build utils",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/AutoUpdateUtils"
            }
        },
        {
            "label": "complex build",
            "dependsOn": [
                "build host",
                "build utils"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}